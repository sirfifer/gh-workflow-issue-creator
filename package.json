{
  "name": "gh-workflow-issue-creator",
  "version": "1.0.0",
  "private": false,
  "description": "GitHub Action that creates/updates detailed issues on workflow failure with smart dedupe, categories, and AI-ready templates.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "ncc build src/index.ts -o dist --source-map",
    "dev": "tsc -w",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write .",
    "test": "vitest run --coverage",
    "test:watch": "vitest",
    "check": "npm run lint && npm run test",
    "prepack": "npm run build",
    "setup:first-time": "ts-node scripts/setup-project.ts",
    "quick-test": "ts-node scripts/quick-test.ts",
    "automate": "ts-node scripts/test-automation/automationRunner.ts",
    "fix-iteration": "npm run automate",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "ts-node tests/e2e/local-action-test.ts",
    "test:coverage": "vitest run --coverage",
    "validate:action": "ts-node scripts/validate-action.ts",
    "test:all": "npm run test:coverage && npm run test:integration && npm run test:e2e"
  },
  "keywords": [
    "github-actions",
    "ci",
    "issues",
    "deduplication",
    "templates",
    "copilot"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "mustache": "^4.2.0",
    "yaml": "^2.4.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/mustache": "^4.2.5",
    "@types/node": "^20.12.12",
    "@typescript-eslint/eslint-plugin": "^7.5.0",
    "@typescript-eslint/parser": "^7.5.0",
    "@vercel/ncc": "^0.38.1",
    "c8": "^9.1.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5",
    "vitest": "^1.6.0"
  },
  "engines": { "node": ">=18" }
}
